<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="plain_list">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:listSelector">@drawable/red_bg</item>
        <item name="android:divider">@color/divider_color</item>
        <item name="android:background">#ffffff</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <!-- <item name="android:paddingLeft">8dp</item> -->
    <!-- <item name="android:paddingRight">8dp</item> -->
    <!-- <item name="android:layout_marginLeft">8dp</item> -->
    <!-- <item name="android:layout_marginRight">8dp</item> -->

    <style name="plain_center_align_text">
        <item name="android:gravity">center</item>
    </style>

    <style name="plain_left_align_text">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/blue_font</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:shadowColor">@color/font_shadow_color</item>
        <item name="android:shadowDy">20</item>
    </style>

    <style name="left_align_form_text">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/white_font</item>
        <item name="android:background">@drawable/black_text_shape</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="general_btn">

        <!-- <item name="android:layout_marginLeft">4dp</item> -->
        <!-- <item name="android:layout_marginRight">4dp</item> -->
        <item name="android:background">@drawable/general_btn_bg</item>
        <item name="android:textColor">@color/blue_font</item>
    </style>

    <style name="large_btn">

        <!-- <item name="android:layout_marginLeft">4dp</item> -->
        <!-- <item name="android:layout_marginRight">4dp</item> -->
        <item name="android:background">@drawable/large_btn_bg</item>
        <item name="android:textColor">@color/blue_font</item>
    </style>

    <style name="list_item_text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="tyre_tag_text" parent="@style/left_align_form_text">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/white_font</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">left</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>